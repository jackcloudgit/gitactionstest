name: "Test Reusable Run Postman Workflow"

on:
  push:
    branches:
      - main
  workflow_dispatch: # Allows manual trigger from GitHub UI

jobs:
  test-run-postman:
    uses: ./.github/workflows/run-postman.yml
    with:
      job_name: "intg-1-build-deploy"
    secrets:
      AWS_ACCESS_KEY_ID: ${{ secrets.AWS_ACCESS_KEY_ID }}
      AWS_SECRET_ACCESS_KEY: ${{ secrets.AWS_SECRET_ACCESS_KEY }}